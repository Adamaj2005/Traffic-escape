<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CROSSPLATFORMPROJECT.SettingsPage"
    BackgroundColor="Black">

    <VerticalStackLayout
        VerticalOptions="Center"
        HorizontalOptions="Center"
        Spacing="20">

        <Label
            Text="Settings"
            FontSize="32"
            TextColor="White"
            HorizontalOptions="Center" />

        <Label
            Text="Game speed increases automatically."
            TextColor="White"
            HorizontalOptions="Center" />

        <Button
            Text="Reset High Score"
            FontSize="20"
            Clicked="OnResetHighScoreClicked" />

        <Button
            Text="Back"
            FontSize="20"
            Clicked="OnBackClicked" />

    </VerticalStackLayout>
</ContentPage>
