<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CROSSPLATFORMPROJECT.SettingsPage"
    BackgroundColor="Black">

    <!-- Centered layout for settings -->
    <VerticalStackLayout
        VerticalOptions="Center"
        HorizontalOptions="Center"
        Spacing="20">

        <!-- Page title -->
        <Label
            Text="Settings"
            FontSize="32"
            TextColor="White" />

        <!-- Sound toggle label -->
        <Label
            Text="Sound On / Off"
            TextColor="White"
            HorizontalOptions="Center" />

        <!-- Sound toggle switch -->
        <Switch
            x:Name="SoundSwitch"
            Toggled="OnSoundToggled" />

        <!-- Information text -->
        <Label
            Text="Game speed increases automatically."
            TextColor="White"
            HorizontalOptions="Center" />

        <!-- Back button -->
        <Button
            Text="Back"
            Clicked="OnBackClicked" />

    </VerticalStackLayout>
</ContentPage>
