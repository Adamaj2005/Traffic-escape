<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CROSSPLATFORMPROJECT.MainMenuPage"
    BackgroundColor="Black">

    <VerticalStackLayout
        VerticalOptions="Center"
        HorizontalOptions="Center"
        Spacing="25">

        <Label
            Text="Traffic Escape"
            FontSize="36"
            TextColor="White"
            HorizontalOptions="Center" />

        <Label
            x:Name="HighScoreLabel"
            Text="High Score: 0"
            FontSize="20"
            TextColor="White"
            HorizontalOptions="Center" />

        <Button
            Text="Start Game"
            FontSize="20"
            Clicked="OnStartGameClicked" />

        <Button
            Text="Settings"
            FontSize="20"
            Clicked="OnSettingsClicked" />

    </VerticalStackLayout>
</ContentPage>
