<?xml version="1.0" encoding="utf-8" ?>
<!-- Traffic Escape Main Page UI Layout -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CROSSPLATFORMPROJECT.MainPage"
             BackgroundColor="#1B2B3A">

    <Grid>

        <!-- Game Canvas -->
        <GraphicsView x:Name="GameCanvas"
                      VerticalOptions="FillAndExpand"
                      HorizontalOptions="FillAndExpand"/>

        <!-- Score -->
        <Label x:Name="ScoreLabel"
               Text="Score: 0"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               Margin="0,20,0,0"
               IsVisible="False"/>

        <!-- Start Menu -->
        <Grid x:Name="StartPanel"
              VerticalOptions="Center"
              HorizontalOptions="Center"
              Padding="20"
              BackgroundColor="#22374A"
              Opacity="0.95">

            <VerticalStackLayout Spacing="20">

                <Label Text="Traffic Escape"
                       FontSize="36"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"/>

                <Label Text="Tap left or right to dodge traffic!"
                       FontSize="16"
                       TextColor="LightGray"
                       HorizontalOptions="Center"/>

                <Button Text="Start Game"
                        Clicked="OnStartClicked"
                        FontSize="20"
                        BackgroundColor="#28A745"
                        TextColor="White"
                        CornerRadius="10"/>

            </VerticalStackLayout>
        </Grid>

        <!-- Game Over -->
        <Grid x:Name="GameOverPanel"
              VerticalOptions="Center"
              HorizontalOptions="Center"
              Padding="20"
              BackgroundColor="#22374A"
              Opacity="0.95"
              IsVisible="False">

            <VerticalStackLayout Spacing="20">

                <Label Text="Game Over!"
                       FontSize="32"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"/>

                <Label x:Name="FinalScoreLabel"
                       Text="Score: 0"
                       FontSize="20"
                       TextColor="White"
                       HorizontalOptions="Center"/>

                <Button Text="Play Again"
                        Clicked="OnRestartClicked"
                        FontSize="20"
                        BackgroundColor="#007BFF"
                        TextColor="White"
                        CornerRadius="10"/>

            </VerticalStackLayout>
        </Grid>

    </Grid>
</ContentPage>
