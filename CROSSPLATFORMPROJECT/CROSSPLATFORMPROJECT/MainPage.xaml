<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CROSSPLATFORMPROJECT.MainPage"
    BackgroundColor="Black">

    <AbsoluteLayout>

        <!-- Road -->
        <GraphicsView x:Name="RoadView"
                      AbsoluteLayout.LayoutBounds="0,0,1,1"
                      AbsoluteLayout.LayoutFlags="All" />

        <!-- Player Car -->
        <Image x:Name="PlayerCar"
               Source="sportscar.png"
               AbsoluteLayout.LayoutBounds="0,0,80,120" />

        <!-- Enemy Car -->
        <Image x:Name="EnemyCar"
               AbsoluteLayout.LayoutBounds="0,0,80,120" />

        <!-- Star Pickup -->
        <Image x:Name="Star"
               Source="star.png"
               IsVisible="False"
               AbsoluteLayout.LayoutBounds="0,0,40,40" />

        <!-- Score -->
        <Label x:Name="ScoreLabel"
               Text="Score: 0"
               FontSize="26"
               TextColor="White"
               AbsoluteLayout.LayoutBounds="0.5,0.05,-1,-1"
               AbsoluteLayout.LayoutFlags="PositionProportional" />

        <!-- Stars -->
        <Label x:Name="StarsLabel"
               Text="Stars: 0"
               FontSize="20"
               TextColor="White"
               AbsoluteLayout.LayoutBounds="0.5,0.10,-1,-1"
               AbsoluteLayout.LayoutFlags="PositionProportional" />

    </AbsoluteLayout>
</ContentPage>
