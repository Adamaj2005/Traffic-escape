<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CROSSPLATFORMPROJECT.MainPage"
    BackgroundColor="Black">

    <AbsoluteLayout>

        <!-- Road background -->
        <GraphicsView
            x:Name="RoadView"
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All" />

        <!-- Player car -->
        <Image
            x:Name="PlayerCar"
            Source="sportscar.png"
            AbsoluteLayout.LayoutBounds="0,0,160,120" />

        <!-- Enemy car -->
        <Image
            x:Name="EnemyCar"
            AbsoluteLayout.LayoutBounds="0,0,80,120" />

        <!-- Star pickup -->
        <Image
            x:Name="Star"
            Source="star.png"
            IsVisible="False"
            AbsoluteLayout.LayoutBounds="0,0,40,40" />

        <!-- Shield pickup -->
        <Image
            x:Name="Shield"
            Source="shield.png"
            IsVisible="False"
            AbsoluteLayout.LayoutBounds="0,0,40,40" />

        <!-- Score display -->
        <Label
            x:Name="ScoreLabel"
            Text="Score: 0"
            FontSize="26"
            TextColor="White"
            AbsoluteLayout.LayoutBounds="0.5,0.05,-1,-1"
            AbsoluteLayout.LayoutFlags="PositionProportional" />

        <!-- Stars display -->
        <Label
            x:Name="StarsLabel"
            Text="Stars: 0"
            FontSize="20"
            TextColor="White"
            AbsoluteLayout.LayoutBounds="0.5,0.10,-1,-1"
            AbsoluteLayout.LayoutFlags="PositionProportional" />

        <!-- High score display -->
        <Label
            x:Name="HighScoreLabel"
            Text="High Score: 0"
            FontSize="18"
            TextColor="White"
            AbsoluteLayout.LayoutBounds="0.05,0.05,-1,-1"
            AbsoluteLayout.LayoutFlags="PositionProportional" />

        <!-- Shield timer -->
        <Label
            x:Name="ShieldTimerLabel"
            Text=""
            FontSize="18"
            TextColor="LightBlue"
            AbsoluteLayout.LayoutBounds="0.05,0.20,-1,-1"
            AbsoluteLayout.LayoutFlags="PositionProportional" />

    </AbsoluteLayout>
</ContentPage>
